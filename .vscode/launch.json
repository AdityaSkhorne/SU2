    "version": "0.2.0",
    "configurations": [
    {
        "name": "(gdb) Launch SU2_CFD serial debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "/home/gomer/local/codes/su2_install/current_branch/serial/gnu/debug/bin/SU2_CFD",
        "args": ["debug_wmles.cfg"],
        "stopAtEntry": true,
        "cwd": "/home/gomer/local/codes/SU2/TestCases/les_debug/channel",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description":  "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            },
            {
                "description": "Use .gdbinit from home directory",
                "text": "source /home/gomer/.gdbinit"
            }
        ]
    }
    ]
}